// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                     String         @id @default(uuid())
    name                   String
    email                  String         @unique
    password               String
    handle                 String         @unique
    remainingLoginAttempts Int            @default(3)
    isBlocked              Boolean        @default(false)
    messages               Message[]
    memberOfDms            Dm[]           @relation("DmMembers")
    ownerOfDms             Dm[]           @relation("DmOwners")
    tokens                 RefreshToken[]
}

model Message {
    id       String   @id @default(uuid())
    sender   User     @relation(fields: [senderId], references: [id])
    senderId String
    message  String
    timeSent DateTime @default(now())
    dm       Dm?      @relation(fields: [dmId], references: [id])
    dmId     String
}

model Dm {
    id       String    @id @default(uuid())
    dmName   String
    messages Message[]
    owners   User[]    @relation("DmOwners")
    members  User[]    @relation("DmMembers")
}

model RefreshToken {
    id           String @id @default(uuid())
    accessToken  String @unique
    refreshToken String @unique
    user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId       String
}
